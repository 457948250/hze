<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/Sport_Record_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#E6E6E6"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/IV_record_back"
            android:src="@drawable/ic_arrow_back_black_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/TV_sport_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有运动 ☟"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/IV_record_back"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/IV_record_back"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/RV_sport_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有记录，赶紧去锻炼添加吧~"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>